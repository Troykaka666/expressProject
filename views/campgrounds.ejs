<% include partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the YelpCamps</h1>
            <p>View our hand-picked campgrounds from all over the country</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary">Add a NeW Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Places</h3>
        </div>
        <div class="row">
                <% campgrounds.forEach(function(campground){ %>
                    <div class="col-md-3 col-sm-6"> 
                        <div >
                            <img src="<%= campground.image %>" alt="" class="img-thumbnail img-fluid">
                        </div> 
                        <div class="caption text-center">
                            <h4><%= campground.name %></h4>
                        </div>    
                    </div>
                <% }); %>
        </div>
    </div>
</div>



<% include partials/footer %>
