<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">  
            <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
             <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="comment" name="comment[text]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="author" name="comment[author]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <a class="color-primary" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>