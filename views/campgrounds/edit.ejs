
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">  
            <h1 style="text-align: center;">Editing <%= campground.name %></h1>
             <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="<%= campground.name %>" name="campground[name]" class="form-control">
                </div>
                 <div class="form-group">
                    <input type="number" value="<%= campground.price %>" name="campground[price]" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="<%= campground.image %>" name="campground[image]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="<%= campground.description %>" name="campground[description]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" type="submit">Submit</button>
                </div>
            </form>
            <a class="color-primary" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>